{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "stripInternal": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "resolveJsonModule": false,
    "sourceMap": true,
    "importHelpers": false
  },
  "include": [
    "./src"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "dist", "test"]
}
