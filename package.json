{
  "name": "solid-codemirror",
  "version": "1.0.0",
  "description": "CodeMirror component for SolidJS",
  "module": "./solid-codemirror.mjs",
  "types": "./public-api.d.ts",
  "exports": {
    ".": {
      "import": "./solid-codemirror.mjs",
      "types": "./public-api.d.ts"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/riccardoperra/solid-codemirror.git"
  },
  "scripts": {
    "build:release": "pnpm --filter=solid-codemirror build && node scripts/prepareBuild.js",
    "lint": "eslint . --ext .js,.jsx,.mjs,.ts,.tsx",
    "semantic-release": "semantic-release",
    "test": "jest",
    "prepare": "husky install"
  },
  "keywords": [
    "solidjs",
    "solid-js",
    "codemirror",
    "codemirror6",
    "ide",
    "solid-codemirror",
    "editor",
    "syntax",
    "code"
  ],
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-angular": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@rollup/plugin-dynamic-import-vars": "^1.4.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,css,json,md,jsx,yml,yaml}": "prettier --ignore-path .gitignore --write"
  }
}
